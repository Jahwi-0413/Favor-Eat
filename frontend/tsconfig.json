{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@/assets/*": ["./assets/*"],
      "@/action/*": ["./action/*"],
      "@/pages/*": ["./pages/*"],
      "@/present/*": ["./present/*"],
      "@/common/*": ["./common/*"],
      "@/component/*": ["./component/*"],
      "@/layout/*": ["./layout/*"],
      "@/store/*": ["./store/*"],
      "@/reducer/*": ["./reducer/*"],
      "@/public/*": ["./public/*"],
      "@/types/*": ["./types/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
